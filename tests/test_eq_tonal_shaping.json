{
  "project": {
    "name": "EQ Tonal Shaping Test",
    "duration": 45.0,
    "sample_rate": 48000,
    "bit_depth": 16
  },
  "settings": {
    "default_silence": 0.5,
    "normalize": false,
    "master_gain": 0,
    "ducking": {
      "enabled": true,
      "mode": "audacity",
      "duck_amount": -6,
      "fade_down_ms": 300,
      "fade_up_ms": 300,
      "min_pause_ms": 200,
      "onset_delay_ms": 100,
      "rules": [
        { "when": "voice", "duck": ["background", "music"] }
      ]
    },
    "loudness": {
      "enabled": true,
      "target_lufs": -20.0
    },
    "eq": {
      "tilt": "warm"
    }
  },
  
  "tracks": [
    {
      "id": "dialogue",
      "type": "voice",
      "role": "voice",
      "gain": 0,
      "clips": []
    },
    {
      "id": "music",
      "type": "music",
      "role": "music",
      "gain": -8,
      "clips": []
    },
    {
      "id": "ambience",
      "type": "ambience",
      "role": "background",
      "gain": -12,
      "clips": []
    }
  ],

  "scenes": [
    {
      "id": "scene_1",
      "name": "Warm Tilt (from settings)",
      "start": 0.0,
      "duration": 15.0,
      "energy": 0.4,
      "tracks": {
        "dialogue": [
          {
            "file": "audio/voice/Scene - 1.wav",
            "offset": 1.0
          }
        ],
        "music": [
          {
            "file": "audio/Music/Days.mp3",
            "loop": true
          }
        ],
        "ambience": [
          {
            "file": "audio/ambience/bgmusic.mp3",
            "loop": true
          }
        ]
      }
    },
    {
      "id": "scene_2",
      "name": "Scene with High Shelf Cut",
      "start": 15.0,
      "duration": 15.0,
      "energy": 0.5,
      "rules": {
        "eq": {
          "high_shelf": -3
        }
      },
      "tracks": {
        "dialogue": [
          {
            "file": "audio/voice/Scene - 2.wav",
            "offset": 1.0
          }
        ],
        "music": [
          {
            "file": "audio/Music/Days.mp3",
            "loop": true
          }
        ],
        "ambience": [
          {
            "file": "audio/ambience/bgmusic.mp3",
            "loop": true
          }
        ]
      }
    },
    {
      "id": "scene_3",
      "name": "Scene with Low Shelf Boost",
      "start": 30.0,
      "duration": 15.0,
      "energy": 0.7,
      "rules": {
        "eq": {
          "low_shelf": 2
        }
      },
      "tracks": {
        "dialogue": [
          {
            "file": "audio/voice/Scene - 1.wav",
            "offset": 1.0
          }
        ],
        "music": [
          {
            "file": "audio/Music/Days.mp3",
            "loop": true
          }
        ],
        "ambience": [
          {
            "file": "audio/ambience/bgmusic.mp3",
            "loop": true
          }
        ]
      }
    }
  ]
}
